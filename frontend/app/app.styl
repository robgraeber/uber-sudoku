body{
  font-family: 'Open Sans Condensed', 'Helvetica Neue', Arial, sans-serif;
  font-size: 24px;
}
h1{
  margin: 0.5em;
  font-size: 1.8em;
}
.text-center{
  text-align: center;
}
#game-board{
  table{
    margin: auto;
    border-spacing: 0;
    border-radius: 4px;
    border: 4px solid #000;
  }
  td{
    text-align: center;
    // width: 5%;
  }

  $border = 1px solid #222;
  $borderHeavy = 3px solid #222;
  .b-bottom{
    border-bottom: $border;
  }
  .b-right{
    border-right: $border;
  }
  .b-bottom-heavy{
    border-bottom: $borderHeavy;
  }
  .b-right-heavy{
    border-right: $borderHeavy;
  }
  .highlighted{
    background-color: yellow;
  }

  input[type="tel"]{
    margin: 0;

    width: 2em;
    height: 2em;
    border: 0;
    text-align:center;
    font-size: 1em;
  }
}
